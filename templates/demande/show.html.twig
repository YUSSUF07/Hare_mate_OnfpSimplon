    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                
            </div>
            <div class="col-md-4">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ demande.id }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ demande.description }}</td>
                        </tr>
                        <tr>
                            <th>Tarif</th>
                            <td>{{ demande.tarif }}</td>
                        </tr>
                        <tr>
