{% extends 'base.html.twig' %}

{% block title %}Demande{% endblock %}

{% block body %}
    <h1>Demande</h1>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                <td>{{ demande.user }}</th>
            </div>
            <div class="col-md-4">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Description</th>
                            <td>{{ demande.description }}</td>
                        </tr>
                        <tr>
                            <th>Tarif</th>
                            <td>{{ demande.tarif }}</td>
                        </tr>
                        <tr>
                            <th>Date</th>
                            <td>{{ demande.date ? demande.date|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                    </tbody>
                </table>
                <a href="{{ path('demande_edit', {'id': demande.id}) }}" class="btn btn-primary">Editer la demande</a>
            </div>
        </div>
        
        
        
    </div>
    <a href="{{ path('demande_index') }}" class="btn btn-primary">Retouner</a>
    {{ include('demande/_delete_form.html.twig') }} 
    
{% endblock %}
