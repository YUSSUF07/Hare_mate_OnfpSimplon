{% extends 'base.html.twig' %}

{% block title %}Hello SecteurController!{% endblock %}

{% block body %}
	    <div class="row flex">
            {% for secteur in secteurs %}
                <div class="col-3">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">
                            {{secteur.nom}}
                            </h5>
                        </div>
                    </div>
                </div>
                <a href="{{ path('secteur_index', {'id': secteur.id}) }}">Editer</a>
            {% endfor %}
        </div>

{% endblock %}
