{% block body %}
<section id="services" class="services"> 
    <div class="conatiner">
      <div class="section-title">
      <h2>Secteur</h2>
      <p> Decrouvez nos differents secteurs d'activites</p> 
      </div>
        <div class="row flex">
            {% for secteur in secteurs %}
                <div class="col-3">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">
                            {{secteur.nom}}
                            </h5>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
      </div>
    </section>
    {% endblock %}
    